# None é um valor padrão, usado quando queremos representar um campo vazio 
# um valor none sempre tem que ficar como ultimo nos parâmetros.
def saudacao(msg,nome): 
    return f'{msg}, {nome}' 

def executa(funcao, *args): 
    return funcao(*args) 

print(
    executa(saudacao, 'Bom dia', 'Luiz')
) 
print( 
    executa(saudacao, 'Boa noite', 'Maria') 
)